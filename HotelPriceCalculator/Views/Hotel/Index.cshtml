@{
    ViewData["Title"] = "Otel Fiyat Hesaplama";
}

<h2>Otel Fiyat Hesaplama</h2>

<div>
    <label for="hotel">Otel Seçin:</label>
    <select id="hotel">
        <option value="">Seçiniz</option>
    </select>
</div>
<div>
    <label for="roomOption">Oda Seçeneği:</label>
    <select id="roomOption">
        <option value="">Seçiniz</option>
    </select>
</div>
<div>
    <label for="roomType">Oda Tipi Seçin:</label>
    <select id="roomType">
        <option value="">Seçiniz</option>
    </select>
</div>
<div>
    <label for="adults">Yetişkin Sayısı:</label>
    <input type="number" id="adults" value="1" min="1">
</div>
<div>
    <label for="childrenCount">Çocuk Sayısı:</label>
    <input type="number" id="childrenCount" value="0" min="0">
</div>
<div id="childrenAges"></div>
<div>
    <label for="startDate">Başlangıç Tarihi:</label>
    <input type="date" id="startDate">
</div>
<div>
    <label for="endDate">Bitiş Tarihi:</label>
    <input type="date" id="endDate">
</div>
<button id="calculatePriceButton">Hesapla</button>

<p id="totalPrice"></p>

<script src="~/js/site.js"></script>
